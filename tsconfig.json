{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es6", "dom"], // Make sure to include the necessary libs
    "types": ["node", "graphql"] // Ensure types are included
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
